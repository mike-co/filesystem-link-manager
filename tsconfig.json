{
	"compilerOptions": {
		"module": "CommonJS", // Use CommonJS module system for Node.js compatibility
		"target": "ES2022", // Compile to ECMAScript 2022 for modern JS features
		"outDir": "out",
		"lib": [
			"ES2022"
		],
		"sourceMap": true, // Generate source maps for debugging
		"rootDir": ".",
		"strict": true, // Enable all strict type-checking options
		"noImplicitAny": true, // Error on variables with implicit 'any' type
		"noImplicitThis": true, // Error on 'this' expressions with implicit 'any' type
		"alwaysStrict": true, // Parse in strict mode and emit "use strict" for each file
		"strictNullChecks": true, // Enable strict null checks
		"strictFunctionTypes": true, // Enable strict function type checking
		"strictBindCallApply": true, // Enable strict bind/call/apply methods on functions
		"strictPropertyInitialization": true, // Ensure class properties are initialized
		"noUnusedLocals": true, // Error on unused local variables
		"noUnusedParameters": true, // Error on unused parameters
		"noFallthroughCasesInSwitch": true, // Error on fallthrough cases in switch statements
		"noImplicitReturns": true, // Error when not all code paths return a value
		"noUncheckedIndexedAccess": true, // Add undefined to indexed access types
		"forceConsistentCasingInFileNames": true, // Ensure consistent file name casing
		"esModuleInterop": true, // Enable compatibility with CommonJS and ES Modules
		"allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
		"skipLibCheck": true, // Skip type checking of declaration files
		"resolveJsonModule": true, // Allow importing .json files
		"declaration": true, // Generate .d.ts declaration files
		"experimentalDecorators": true, // Enable support for ES decorators
		"emitDecoratorMetadata": true, // Enable emit of type metadata for decorators
		"baseUrl": "."
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"out",
		"out-test",
		"**/*.test.ts",
		"**/*.mts",
		"**/*.mjs"
	] 
}
